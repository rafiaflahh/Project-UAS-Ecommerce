# Application Environment
APP_NAME="ShopHub E-Commerce"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Application Timezone
APP_TIMEZONE=UTC

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=pwl_ecommerce
DB_USERNAME=root
DB_PASSWORD=

# Database Options
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=ecommerce_

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=null
SESSION_CONNECTION=null

# Queue Configuration
QUEUE_CONNECTION=database

# Redis Configuration (Optional)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Amazon SES Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Filesystem Configuration
FILESYSTEM_DISK=local

# Public URL
ASSET_URL=

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Debug Configuration
DEBUGBAR_ENABLED=false
TELESCOPE_ENABLED=false

# Security
FORCE_HTTPS=false
TRUSTED_PROXIES=*
TRUSTED_HOSTS=

# E-Commerce Specific Settings
SHOP_CURRENCY=USD
SHOP_CURRENCY_SYMBOL=$
SHOP_TAX_RATE=0.00
SHOP_SHIPPING_COST=0.00
SHOP_FREE_SHIPPING_THRESHOLD=50.00

# Payment Gateway Settings (Stripe Example)
STRIPE_KEY=pk_test_
STRIPE_SECRET=sk_test_
STRIPE_WEBHOOK_SECRET=

# Payment Gateway Settings (PayPal Example)
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_WEBHOOK_ID=

# Image Upload Settings
MAX_IMAGE_SIZE=2048
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# SEO Settings
META_DESCRIPTION="Quality products at great prices"
META_KEYWORDS="e-commerce,shopping,products,online store"
DEFAULT_OG_IMAGE=/images/og-default.jpg

# Performance Settings
ENABLE_HTTP_CACHE=true
ENABLE_QUERY_CACHE=true
ENABLE_IMAGE_OPTIMIZATION=true

# Social Media Integration
FACEBOOK_URL=
TWITTER_URL=
INSTAGRAM_URL=
LINKEDIN_URL=

# Google Analytics
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=

# Feature Flags
ENABLE_WISHLIST=true
ENABLE_REVIEWS=true
ENABLE_RELATED_PRODUCTS=true
ENABLE_PRODUCT_COMPARISON=true
ENABLE_MULTI_CURRENCY=false

# Rate Limiting
API_RATE_LIMIT=60
LOGIN_RATE_LIMIT=5
CHECKOUT_RATE_LIMIT=3

# Maintenance Mode
MAINTENANCE_DRIVER=file

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
